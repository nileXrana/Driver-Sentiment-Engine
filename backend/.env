# ============================================
# Driver Sentiment Engine - Environment Config
# ============================================

MONGO_URI=mongodb://localhost:27017/driver-sentiment-engine
PORT=5001

# Queue worker interval in milliseconds
QUEUE_POLL_INTERVAL_MS=2000

# Alert threshold - drivers below this score trigger alerts
ALERT_THRESHOLD=2.5

# Minimum seconds between alerts for the same driver (prevents spam)
ALERT_COOLDOWN_SECONDS=3600
